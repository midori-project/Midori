{
  "ts-node": {
    "esm": false,
    "require": ["tsconfig-paths/register"],
    "compilerOptions": {
      "module": "CommonJS",
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "target": "ES2020",
      "baseUrl": "..",
      "paths": {
        "@/*": ["./src/*"]
      }
    }
  }
}