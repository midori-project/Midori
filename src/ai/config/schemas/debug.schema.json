{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://midori.dev/schemas/debug.schema.json",
  "title": "Debug Analysis Schema",
  "description": "Schema สำหรับ debug analysis และ error reports",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique debug session identifier"
    },
    "testRunId": {
      "type": "string",
      "description": "Associated test run identifier"
    },
    "errorType": {
      "type": "string",
      "enum": ["runtime", "compile", "logic", "performance", "security", "syntax"],
      "description": "Type of error being debugged"
    },
    "severity": {
      "type": "string",
      "enum": ["low", "medium", "high", "critical"],
      "description": "Error severity level"
    },
    "error": {
      "type": "object",
      "properties": {
        "message": { "type": "string" },
        "stack": { "type": "string" },
        "code": { "type": "string" },
        "file": { "type": "string" },
        "line": { "type": "number" },
        "column": { "type": "number" }
      },
      "required": ["message"]
    },
    "analysis": {
      "type": "object",
      "properties": {
        "rootCause": { "type": "string" },
        "affectedComponents": {
          "type": "array",
          "items": { "type": "string" }
        },
        "relatedErrors": {
          "type": "array",
          "items": { "type": "string" }
        },
        "patterns": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "pattern": { "type": "string" },
              "frequency": { "type": "number" },
              "confidence": { "type": "number" }
            }
          }
        }
      }
    },
    "solution": {
      "type": "object",
      "properties": {
        "approach": {
          "type": "string",
          "enum": ["fix", "refactor", "workaround", "configuration", "dependency"]
        },
        "description": { "type": "string" },
        "steps": {
          "type": "array",
          "items": { "type": "string" }
        },
        "patches": {
          "type": "array",
          "items": { "type": "string" }
        },
        "confidence": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "testCoverage": { "type": "boolean" }
      }
    },
    "alternatives": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "approach": { "type": "string" },
          "description": { "type": "string" },
          "pros": {
            "type": "array",
            "items": { "type": "string" }
          },
          "cons": {
            "type": "array",
            "items": { "type": "string" }
          },
          "score": { "type": "number" }
        }
      }
    },
    "context": {
      "type": "object",
      "properties": {
        "environment": { "type": "string" },
        "browser": { "type": "string" },
        "userAgent": { "type": "string" },
        "viewport": { "type": "object" },
        "dependencies": { "type": "object" },
        "configuration": { "type": "object" }
      }
    },
    "prevention": {
      "type": "object",
      "properties": {
        "recommendations": {
          "type": "array",
          "items": { "type": "string" }
        },
        "testCases": {
          "type": "array",
          "items": { "type": "string" }
        },
        "monitoring": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "metadata": {
      "type": "object",
      "properties": {
        "startedAt": { "type": "string", "format": "date-time" },
        "completedAt": { "type": "string", "format": "date-time" },
        "duration": { "type": "number" },
        "analyst": { "type": "string" },
        "reviewRequired": { "type": "boolean" }
      }
    }
  },
  "required": ["id", "errorType", "severity", "error", "analysis"]
}
