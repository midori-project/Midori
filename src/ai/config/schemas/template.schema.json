{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://midori.dev/schemas/template.schema.json",
  "title": "UI Template Schema",
  "description": "Schema สำหรับ UiTemplate และ UiTemplateVersion",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier for the template"
    },
    "name": {
      "type": "string",
      "description": "Template name"
    },
    "version": {
      "type": "string",
      "description": "Template version"
    },
    "category": {
      "type": "string",
      "enum": ["landing", "dashboard", "ecommerce", "blog", "portfolio", "corporate"],
      "description": "Template category"
    },
    "layout": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["single-page", "multi-page", "spa"]
        },
        "structure": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["header", "hero", "features", "testimonials", "cta", "footer"]
          }
        },
        "responsive": {
          "type": "boolean",
          "default": true
        }
      }
    },
    "components": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "section": { "type": "string" },
          "required": { "type": "boolean" },
          "configurable": { "type": "boolean" }
        },
        "required": ["name", "section"]
      }
    },
    "styling": {
      "type": "object",
      "properties": {
        "theme": {
          "type": "string",
          "enum": ["modern", "minimal", "corporate", "creative", "tech"]
        },
        "colorScheme": {
          "type": "string",
          "enum": ["light", "dark", "auto"]
        },
        "customization": {
          "type": "object",
          "properties": {
            "colors": { "type": "boolean" },
            "fonts": { "type": "boolean" },
            "spacing": { "type": "boolean" }
          }
        }
      }
    },
    "preview": {
      "type": "object",
      "properties": {
        "thumbnail": { "type": "string" },
        "demo": { "type": "string" },
        "screenshots": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "metadata": {
      "type": "object",
      "properties": {
        "description": { "type": "string" },
        "tags": {
          "type": "array",
          "items": { "type": "string" }
        },
        "difficulty": {
          "type": "string",
          "enum": ["beginner", "intermediate", "advanced"]
        }
      }
    }
  },
  "required": ["id", "name", "version", "category", "layout"]
}
