{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://midori.dev/schemas/plan.schema.json",
  "title": "Midori AI Orchestrator Plan Schema",
  "description": "Schema for execution plans created by Orchestrator AI",
  
  "type": "object",
  "required": ["envelope", "payload"],
  "properties": {
    "envelope": {
      "$ref": "./shared/defs.json#/definitions/envelope"
    },
    "payload": {
      "type": "object",
      "required": ["op", "plannedTasks"],
      "properties": {
        "op": {
          "type": "string",
          "enum": ["spec.store_upsert", "spec.get", "plan.execute"],
          "description": "Operation type"
        },
        "specDelta": {
          "type": "object",
          "description": "Specification changes to apply",
          "properties": {
            "component": {
              "type": "string",
              "description": "Target component name"
            },
            "version": {
              "type": "integer",
              "minimum": 1,
              "description": "Version number"
            },
            "capabilities": {
              "type": "object",
              "description": "Component capabilities and features"
            },
            "constraints": {
              "type": "object",
              "description": "Design and technical constraints"
            }
          }
        },
        "qualityGates": {
          "type": "array",
          "items": {
            "$ref": "./shared/defs.json#/definitions/qualityGate"
          },
          "description": "Required quality gates to pass"
        },
        "plannedTasks": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["id", "to"],
            "properties": {
              "id": {
                "type": "string",
                "pattern": "^t_[a-zA-Z0-9_]+$",
                "description": "Task identifier"
              },
              "to": {
                "type": "string",
                "description": "Target agent"
              },
              "dependsOn": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "description": "Task dependencies"
              },
              "payload": {
                "type": "object",
                "description": "Task-specific payload"
              }
            }
          }
        },
        "edges": {
          "type": "array",
          "items": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "minItems": 2,
            "maxItems": 2
          },
          "description": "Task dependency graph edges"
        }
      }
    }
  }
}
