{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "OrchestratorPlan",
  "type": "object",
  "required": [
    "tasks",
    "edges"
  ],
  "properties": {
    "tasks": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "action"
        ],
        "properties": {
          "id": {
            "type": "string"
          },
          "action": {
            "type": "string"
          },
          "payload": {
            "type": "object"
          }
        }
      }
    },
    "edges": {
      "type": "array",
      "items": {
        "type": "array",
        "minItems": 2,
        "maxItems": 2
      }
    }
  }
}
