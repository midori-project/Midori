{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://midori.dev/schemas/conversation.schema.json",
  "title": "Conversation Schema",
  "description": "Schema สำหรับ conversation และ chat context",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique conversation identifier"
    },
    "userId": {
      "type": "string",
      "description": "User identifier"
    },
    "projectId": {
      "type": "string",
      "description": "Associated project identifier"
    },
    "title": {
      "type": "string",
      "description": "Conversation title"
    },
    "messages": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/message"
      }
    },
    "context": {
      "type": "object",
      "properties": {
        "currentPage": { "type": "string" },
        "selectedComponent": { "type": "string" },
        "recentChanges": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "metadata": {
      "type": "object",
      "properties": {
        "createdAt": { "type": "string", "format": "date-time" },
        "updatedAt": { "type": "string", "format": "date-time" },
        "language": { "type": "string", "default": "th" },
        "status": {
          "type": "string",
          "enum": ["active", "completed", "archived"]
        }
      }
    }
  },
  "definitions": {
    "message": {
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "role": {
          "type": "string",
          "enum": ["user", "assistant", "system"]
        },
        "content": { "type": "string" },
        "timestamp": { "type": "string", "format": "date-time" },
        "attachments": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": { "type": "string" },
              "url": { "type": "string" },
              "name": { "type": "string" }
            }
          }
        }
      },
      "required": ["id", "role", "content", "timestamp"]
    }
  },
  "required": ["id", "userId", "messages"]
}
