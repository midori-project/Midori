{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://midori.dev/schemas/conflict.schema.json",
  "title": "Conflict Resolution Schema",
  "description": "Schema สำหรับ patch conflicts และ resolution strategies",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique conflict identifier"
    },
    "type": {
      "type": "string",
      "enum": ["merge", "syntax", "semantic", "dependency", "style"],
      "description": "Type of conflict"
    },
    "severity": {
      "type": "string",
      "enum": ["low", "medium", "high", "critical"],
      "description": "Conflict severity level"
    },
    "source": {
      "type": "object",
      "properties": {
        "patchId": { "type": "string" },
        "filePath": { "type": "string" },
        "startLine": { "type": "number" },
        "endLine": { "type": "number" },
        "content": { "type": "string" }
      },
      "required": ["patchId", "filePath", "content"]
    },
    "target": {
      "type": "object",
      "properties": {
        "patchId": { "type": "string" },
        "filePath": { "type": "string" },
        "startLine": { "type": "number" },
        "endLine": { "type": "number" },
        "content": { "type": "string" }
      },
      "required": ["patchId", "filePath", "content"]
    },
    "resolution": {
      "type": "object",
      "properties": {
        "strategy": {
          "type": "string",
          "enum": ["merge", "override", "manual", "skip", "rewrite"]
        },
        "content": { "type": "string" },
        "reasoning": { "type": "string" },
        "confidence": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        }
      },
      "required": ["strategy"]
    },
    "alternatives": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "strategy": { "type": "string" },
          "content": { "type": "string" },
          "reasoning": { "type": "string" },
          "score": { "type": "number" }
        }
      }
    },
    "context": {
      "type": "object",
      "properties": {
        "surroundingCode": { "type": "string" },
        "dependencies": {
          "type": "array",
          "items": { "type": "string" }
        },
        "relatedFiles": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "metadata": {
      "type": "object",
      "properties": {
        "detectedAt": { "type": "string", "format": "date-time" },
        "resolvedAt": { "type": "string", "format": "date-time" },
        "resolvedBy": { "type": "string" },
        "reviewRequired": { "type": "boolean" },
        "testRequired": { "type": "boolean" }
      }
    }
  },
  "required": ["id", "type", "severity", "source", "target"]
}
