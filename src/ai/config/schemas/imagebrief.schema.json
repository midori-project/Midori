{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://midori.dev/schemas/imagebrief.schema.json",
  "title": "ImageBrief",
  "type": "object",
  "required": [
    "prompt"
  ],
  "properties": {
    "prompt": {
      "type": "string"
    },
    "styleHints": {
      "type": "object"
    },
    "aspectRatio": {
      "type": "string",
      "pattern": "^\\d+:\\d+$"
    },
    "size": {
      "type": "string"
    },
    "negative": {
      "type": "string"
    },
    "safety": {
      "type": "object"
    }
  }
}
