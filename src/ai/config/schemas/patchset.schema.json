{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "PatchSet",
  "type": "object",
  "required": [
    "patches"
  ],
  "properties": {
    "patchSetId": {
      "type": "string"
    },
    "meta": {
      "type": "object"
    },
    "patches": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "filePath"
        ],
        "properties": {
          "filePath": {
            "type": "string"
          },
          "changeType": {
            "type": "string",
            "enum": [
              "create",
              "update",
              "delete"
            ]
          },
          "hunks": {
            "type": "array",
            "items": {
              "type": "object",
              "required": [
                "start",
                "end",
                "content"
              ],
              "properties": {
                "start": {
                  "type": "integer",
                  "minimum": 0
                },
                "end": {
                  "type": "integer",
                  "minimum": 0
                },
                "content": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    }
  }
}
