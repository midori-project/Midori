{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://midori.dev/schemas/patchset.schema.json",
  "title": "Midori AI PatchSet Schema",
  "description": "Schema for code patches generated by Editor/Squasher AI",
  
  "type": "object",
  "required": ["envelope", "payload"],
  "properties": {
    "envelope": {
      "$ref": "./shared/defs.json#/definitions/envelope"
    },
    "payload": {
      "type": "object",
      "required": ["patches"],
      "properties": {
        "patches": {
          "type": "array",
          "items": {
            "$ref": "./shared/defs.json#/definitions/filePatch"
          },
          "description": "Array of file patches"
        },
        "notes": {
          "type": "string",
          "description": "Human-readable notes about the changes"
        },
        "changelog": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["type", "scope", "msg"],
            "properties": {
              "type": {
                "type": "string",
                "enum": ["feat", "fix", "refactor", "style", "docs", "test"],
                "description": "Change type following conventional commits"
              },
              "scope": {
                "type": "string",
                "description": "Scope of the change"
              },
              "msg": {
                "type": "string",
                "description": "Change message"
              }
            }
          }
        },
        "squashed": {
          "type": "object",
          "description": "Squashed patch information (for Squasher AI)",
          "properties": {
            "id": {
              "type": "string",
              "description": "Squash operation ID"
            },
            "combinedDiff": {
              "type": "string",
              "description": "Combined unified diff"
            },
            "sourcePatches": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "Source patch IDs that were squashed"
            }
          }
        }
      }
    }
  }
}
