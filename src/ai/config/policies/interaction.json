{
  "description": "ลดคำถามจุกจิก (Interaction Policy) สำหรับ Midori AI Agents",
  "strategy": {
    "clarifyMode": "assume_and_proceed",
    "askMode": "ask_if_blocking",
    "questionStyle": "one_shot_question"
  },
  "confidence": {
    "minConfidenceToProceed": 0.7,
    "unknownsBudget": 3,
    "maxQuestionsPerCommand": 1
  },
  "assumptionOrder": [
    "SpecBundle",
    "Project.defaults", 
    "BrandGuide",
    "UI.patterns",
    "Common.practices"
  ],
  "questionRules": {
    "askOnceCache": true,
    "combineRelatedQuestions": true,
    "prioritizeBlocking": true,
    "includeOptionsWhenPossible": true
  },
  "riskEscalation": {
    "maxFilesTouched": 10,
    "maxPatchLines": 200,
    "maxDependencyChanges": 5,
    "criticalPaths": [
      "src/app/layout.tsx",
      "src/middleware.ts",
      "prisma/schema.prisma",
      "package.json",
      "next.config.ts"
    ],
    "behaviorOnRisk": {
      "blockOnDelete": true,
      "requireConfirmation": true,
      "showImpactSummary": true
    }
  },
  "smartDefaults": {
    "ui": {
      "framework": "next.js",
      "styling": "tailwind",
      "components": "radix-ui",
      "typescript": true
    },
    "accessibility": {
      "contrast": "AA",
      "focusVisible": true,
      "ariaLabels": "required"
    },
    "patterns": {
      "exportType": "default",
      "componentNaming": "PascalCase",
      "fileNaming": "kebab-case"
    }
  }
}
