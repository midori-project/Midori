{
  "description": "Quality gates that must pass before preview/deploy",
  "gates": {
    "json_schema": {
      "enabled": true,
      "blocking": true,
      "description": "Validate all AI outputs against JSON schemas"
    },
    "tsc": {
      "enabled": true,
      "blocking": true,
      "description": "TypeScript compilation check"
    },
    "lint": {
      "enabled": true,
      "blocking": false,
      "description": "ESLint code quality check"
    },
    "unit": {
      "enabled": true,
      "blocking": true,
      "description": "Unit tests"
    },
    "e2e": {
      "enabled": true,
      "blocking": false,
      "description": "End-to-end tests"
    },
    "a11y": {
      "enabled": true,
      "blocking": true,
      "description": "Accessibility compliance check"
    },
    "security": {
      "enabled": true,
      "blocking": true,
      "description": "Security vulnerability scan"
    }
  },
  "thresholds": {
    "unitTestCoverage": 0.8,
    "lintWarningsMax": 10,
    "buildTime": 30000,
    "bundleSize": "5MB"
  },
  "escalation": {
    "blockPreviewOnFail": true,
    "notifyOnFailure": true,
    "retryAttempts": 2
  }
}
