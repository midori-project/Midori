{
  "name": "tester",
  "description": "ทดสอบโค้ดและสร้าง TestRun/TestArtifact",
  "model": "gpt-5-mini",
  "temperature": 0.2,
  "produces": [
    "TestRun", 
    "TestArtifact",
    "TestSuite",
    "TestCase"
  ],
  "consumes": [
    "PatchSet",
    "SpecBundle"
  ],
  "schemas": {
    "patchset": "../schemas/patchset.schema.json",
    "testrun": "../schemas/testrun.schema.json",
    "spec": "../schemas/spec.schema.json"
  },
  "policies": {
    "qualityGates": "../policies/quality-gates.json",
    "escalation": "../policies/escalation.json",
    "interaction": "../policies/interaction.json"
  },
  "systemPrompt": "../../prompts/tester.system.md",
  "capabilities": [
    "automated_testing",
    "test_case_generation",
    "regression_testing",
    "performance_testing",
    "accessibility_testing"
  ],
  "triggers": [
    "code_changes",
    "deployment_request",
    "quality_gate_check"
  ],
  "features": {
    "testTypes": ["unit", "integration", "e2e", "performance", "accessibility"],
    "frameworks": ["jest", "playwright", "testing-library"],
    "coverage": true,
    "reports": ["html", "json", "junit"],
    "parallelExecution": true
  }
}
