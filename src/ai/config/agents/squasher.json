{
  "name": "squasher",
  "description": "รวม PatchSet หลายชุดเข้าด้วยกันและแก้ conflicts",
  "model": "gpt-5",
  "temperature": 0.1,
  "produces": [
    "PatchSet"
  ],
  "consumes": [
    "PatchSet[]",
    "ConflictResolution"
  ],
  "schemas": {
    "patchset": "../schemas/patchset.schema.json",
    "conflict": "../schemas/conflict.schema.json"
  },
  "policies": {
    "qualityGates": "../policies/quality-gates.json",
    "escalation": "../policies/escalation.json",
    "interaction": "../policies/interaction.json"
  },
  "systemPrompt": "../../prompts/squasher.system.md",
  "capabilities": [
    "patch_merging",
    "conflict_resolution",
    "code_optimization",
    "duplicate_removal",
    "dependency_ordering"
  ],
  "triggers": [
    "multiple_patches",
    "merge_conflicts",
    "optimization_request"
  ],
  "features": {
    "conflictResolution": "smart",
    "duplicateDetection": true,
    "dependencyAware": true,
    "codeFormatting": true,
    "validationChecks": true
  }
}
