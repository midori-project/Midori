{
  "name": "visual",
  "description": "สร้างรูปภาพและ visual assets สำหรับเว็บไซต์",
  "model": "dall-e-3",
  "temperature": 0.3,
  "produces": [
    "ImageBrief",
    "ImageAsset"
  ],
  "consumes": [
    "Command",
    "SpecBundle",
    "BrandGuide"
  ],
  "schemas": {
    "command": "../schemas/command.schema.json",
    "imagebrief": "../schemas/imagebrief.schema.json",
    "brand": "../schemas/brand.schema.json"
  },
  "policies": {
    "qualityGates": "../policies/quality-gates.json",
    "escalation": "../policies/escalation.json",
    "interaction": "../policies/interaction.json"
  },
  "systemPrompt": "../../prompts/visual.system.md",
  "capabilities": [
    "image_generation",
    "visual_design",
    "brand_consistency",
    "asset_optimization",
    "responsive_imagery"
  ],
  "triggers": [
    "image_request",
    "visual_update",
    "brand_asset_creation"
  ],
  "features": {
    "imageFormats": ["png", "jpg", "svg", "webp"],
    "sizes": ["thumbnail", "hero", "icon", "background"],
    "styles": ["modern", "minimal", "corporate", "creative"],
    "brandAlignment": true,
    "responsiveGeneration": true
  }
}
