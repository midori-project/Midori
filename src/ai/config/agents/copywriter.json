{
  "name": "copywriter",
  "description": "สร้างเนื้อหาและข้อความสำหรับเว็บไซต์",
  "model": "gpt-5-mini",
  "temperature": 0.4,
  "produces": [
    "CopyBlock"
  ],
  "consumes": [
    "Command",
    "SpecBundle",
    "BrandGuide"
  ],
  "schemas": {
    "command": "../schemas/command.schema.json",
    "copyblock": "../schemas/copyblock.schema.json",
    "brand": "../schemas/brand.schema.json"
  },
  "policies": {
    "qualityGates": "../policies/quality-gates.json",
    "escalation": "../policies/escalation.json",
    "interaction": "../policies/interaction.json"
  },
  "systemPrompt": "../../prompts/copywriter.system.md",
  "capabilities": [
    "content_creation",
    "brand_voice_matching",
    "seo_optimization",
    "multilingual_writing",
    "ui_copy_generation"
  ],
  "triggers": [
    "content_request",
    "copy_update",
    "brand_refresh"
  ],
  "features": {
    "languages": ["th", "en"],
    "tones": ["professional", "friendly", "casual", "formal"],
    "contentTypes": ["headlines", "descriptions", "cta", "navigation", "forms"],
    "seoOptimized": true,
    "brandConsistency": true
  }
