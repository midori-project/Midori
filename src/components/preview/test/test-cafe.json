{
  "a11y": { "contrast": "AA", "minFontSizePx": 14, "keyboardNavigable": true, "ariaRequired": true },
  "layout": { "breakpoints": ["sm","md","lg"], "containerMaxWidth": 1200, "minTapTargetPx": 44 },
  "content": { "seo": { "titleMaxLen": 60, "descMaxLen": 160, "requireH1": true, "metaTags": ["og:title","og:description"] } },
  "assets": {
    "hero": { "minWidth": 1200, "aspectRatio": "16:9" },
    "menu.item.image": { "minWidth": 600, "aspectRatio": "1:1" }
  },
  "performance": { "maxImageKb": 500, "maxCriticalCssKb": 120 },
  "security": { "disallowInlineScript": true, "cspRequired": true },
  "i18n": { "locales": ["th","en"], "noHardcodedText": true },
  "code": { "tsc": true, "eslint": true, "format": true }
}
