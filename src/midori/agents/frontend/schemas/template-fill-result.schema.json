{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Template Fill Result Schema",
  "description": "Schema for template fill operation results",
  "type": "object",
  "required": ["filledSlots", "mockedKeys", "validationReport"],
  "properties": {
    "filledSlots": {
      "type": "object",
      "description": "All filled slot values including requirements, overrides, defaults, and mocks",
      "patternProperties": {
        "^slots\\..*|^external\\..*|^social\\..*|^contact\\..*$": {
          "type": ["string", "number", "boolean"]
        }
      }
    },
    "mockedKeys": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "List of keys that were filled with mock data"
    },
    "validationReport": {
      "type": "object",
      "required": ["errors", "warnings"],
      "properties": {
        "errors": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["field", "message"],
            "properties": {
              "field": {
                "type": "string"
              },
              "message": {
                "type": "string"
              },
              "code": {
                "type": "string"
              }
            }
          }
        },
        "warnings": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["field", "message"],
            "properties": {
              "field": {
                "type": "string"
              },
              "message": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "metadata": {
      "type": "object",
      "properties": {
        "templateKey": {
          "type": "string"
        },
        "version": {
          "type": "number"
        },
        "filledAt": {
          "type": "string",
          "format": "date-time"
        },
        "mockProfile": {
          "type": "string"
        },
        "totalSlots": {
          "type": "number"
        },
        "filledSlotsCount": {
          "type": "number"
        }
      }
    }
  }
}
