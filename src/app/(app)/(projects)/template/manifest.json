{
    "id": "restaurant.minimal.v1",
    "category": "restaurant",
    "version": 1,
    "files": [
      { "path": "Hero.tsx",   "kind": "tsx" },
      { "path": "Navbar.tsx", "kind": "tsx" },
      { "path": "theme.css",      "kind": "css" }
    ],
    "fields": {
      "global.palette.primary":   { "type": "enum", "enum": ["blue","green","purple","pink","orange"], "required": true },
      "global.palette.secondary": { "type": "enum", "enum": ["blue","green","purple","pink","orange"] },
      "global.palette.bgTone":    { "type": "enum", "enum": ["50","100","200"], "default": "100" },
      "global.tokens.radius":     { "type": "enum", "enum": ["6px","8px","10px"], "default": "8px" },
      "global.tokens.spacing":    { "type": "enum", "enum": ["0.75rem","1rem","1.25rem"], "default": "1rem" },
  
      "Hero.badge":       { "type": "string", "max": 40,  "required": true },
      "Hero.heading":     { "type": "string", "max": 80,  "required": true },
      "Hero.subheading":  { "type": "string", "max": 160, "required": true },
      "Hero.ctaLabel":    { "type": "string", "max": 24,  "required": true },
      "Hero.secondaryCta": { "type": "string", "max": 24, "required": true },
      "Hero.accentColor": { "type": "enum", "enum": ["primary","secondary"], "default": "primary" },
      "Hero.stat1":       { "type": "string", "max": 20,  "required": true },
      "Hero.stat1Label":  { "type": "string", "max": 40,  "required": true },
      "Hero.stat2":       { "type": "string", "max": 20,  "required": true },
      "Hero.stat2Label":  { "type": "string", "max": 40,  "required": true },
      "Hero.stat3":       { "type": "string", "max": 20,  "required": true },
      "Hero.stat3Label":  { "type": "string", "max": 40,  "required": true },
  
      "Navbar.brand":        { "type": "string", "min": 1, "required": true },
      "Navbar.ctaButton":    { "type": "string", "max": 20, "required": true },
      "Navbar.menu[].label": { "type": "string", "min": 1, "required": true },
      "Navbar.menu[].href":  { "type": "string", "min": 1, "required": true }
    },
    "mapping": [
      {
        "file": "Hero.tsx",
        "placeholders": {
          "primary": "global.palette.primary",
          "bgTone": "global.palette.bgTone",
          "badge": "Hero.badge",
          "heading": "Hero.heading",
          "subheading": "Hero.subheading",
          "ctaLabel": "Hero.ctaLabel",
          "secondaryCta": "Hero.secondaryCta",
          "accentColor": "Hero.accentColor",
          "stat1": "Hero.stat1",
          "stat1Label": "Hero.stat1Label",
          "stat2": "Hero.stat2",
          "stat2Label": "Hero.stat2Label",
          "stat3": "Hero.stat3",
          "stat3Label": "Hero.stat3Label"
        }
      },
      {
        "file": "Navbar.tsx",
        "placeholders": {
          "primary": "global.palette.primary",
          "accentColor": "global.palette.secondary",
          "brand": "Navbar.brand",
          "brandFirstChar": "Navbar.brand",
          "ctaButton": "Navbar.ctaButton",
          "menuItems": "Navbar.menu"
        }
      },
      {
        "file": "theme.css",
        "placeholders": {
          "radius": "global.tokens.radius",
          "spacing": "global.tokens.spacing"
        }
      }
    ]
  }